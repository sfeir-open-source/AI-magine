{
  "name": "@sfeir-lille/ai-magine",
  "workspaces": [
    "backend",
    "private-frontend",
    "public-frontend"
  ],
  "scripts": {
    "prettier:c": "npm run prettier:c --workspaces",
    "prettier:w": "npm run prettier:w --workspaces",
    "lint:c": "npm run lint:c --workspaces",
    "lint:w": "npm run lint:w --workspaces",
    "test:w": "npm run test:w --workspaces",
    "test": "npm run test --workspaces",
    "start:dev": "npm run start:dev --workspaces",
    "release": "semantic-release",
    "release:backend": "npm run release -w backend",
    "release:private-frontend": "npm run release -w private-frontend",
    "release:public-frontend": "npm run release -w public-frontend",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.3",
    "semantic-release": "^22.0.0",
    "tailwindcss": "^4.0.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "lint:all:w",
      "prettier:all:w"
    ]
  },
  "dependencies": {
    "nanoid": "^5.1.2"
  }
}
