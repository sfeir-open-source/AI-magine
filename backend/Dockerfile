FROM node:22-alpine AS builder

WORKDIR /app

COPY package*.json ./

RUN npm install

# Copy source files
COPY . .

RUN npm run build

FROM node:22-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install --only=production

COPY --from=builder /app/dist ./dist

ENV NODE_ENV=production
ENV HOST=$HOST
ENV PORT=$PORT
ENV CORS_ALLOWED_ORIGINS=$CORS_ALLOWED_ORIGINS
ENV SQLITE_DB_PATH=$SQLITE_DB_PATH
ENV EMAIL_ENCRYPTION_KEY=$EMAIL_ENCRYPTION_KEY
ENV EMAIL_ENCRYPTION_IV=$EMAIL_ENCRYPTION_IV
ENV SWAGGER_BASE_PATH=$SWAGGER_BASE_PATH
ENV IMAGEN_GCP_PROJECT_ID=$IMAGEN_GCP_PROJECT_ID
ENV IMAGEN_REGION=$IMAGEN_REGION
ENV IMAGEN_ENABLED=$IMAGEN_ENABLED
ENV FIRESTORE_GCP_PROJECT_ID=$FIRESTORE_GCP_PROJECT_ID
ENV FIRESTORE_ENABLED=$FIRESTORE_ENABLED
ENV BUCKET_GCP_PROJECT_ID=$BUCKET_GCP_PROJECT_ID
ENV BUCKET_ENABLED=$BUCKET_ENABLED

EXPOSE $PORT

CMD ["node", "dist/main.js"]
